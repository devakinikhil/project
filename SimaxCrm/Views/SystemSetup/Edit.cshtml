@model SimaxCrm.Model.Entity.SystemSetup

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">
                <strong>Update</strong>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Edit" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />

                            <div class="form-group"><label asp-for="CompanyName" class="control-label"></label><input asp-for="CompanyName" class="form-control" /><span asp-validation-for="CompanyName" class="text-danger"></span></div>

                            <div class="form-group"><label asp-for="CompanyAddress" class="control-label"></label><textarea asp-for="CompanyAddress" class="form-control" rows="4"></textarea><span asp-validation-for="CompanyAddress" class="text-danger"></span></div>

                            <div class="form-group"><label asp-for="CompanyContact" class="control-label"></label><input asp-for="CompanyContact" class="form-control" /><span asp-validation-for="CompanyContact" class="text-danger"></span></div>

                            <div class="form-group"><label asp-for="CompanyGstNumber" class="control-label"></label><input asp-for="CompanyGstNumber" class="form-control" /><span asp-validation-for="CompanyGstNumber" class="text-danger"></span></div>
                            <div class="form-group"><label asp-for="TaxPercent" class="control-label"></label><input asp-for="TaxPercent" class="form-control" /><span asp-validation-for="TaxPercent" class="text-danger"></span></div>

                            <div class="form-group"><label asp-for="Currency" class="control-label"></label><input asp-for="Currency" class="form-control" /><span asp-validation-for="Currency" class="text-danger"></span></div>

                            <div class="form-group"><label asp-for="CurrencySymbol" class="control-label"></label><input asp-for="CurrencySymbol" class="form-control" /><span asp-validation-for="CurrencySymbol" class="text-danger"></span></div>


                            <div class="control-group">
                                <label asp-for="CompanyLogo" class="control-label"></label>
                                <div class="controls">
                                    <input type="file" id="PostedFile" name="PostedFile" class="span6" />
                                </div>
                            </div>

                            <div class="form-group"><label asp-for="Status" class="control-label"></label><input asp-for="Status" /><span asp-validation-for="Status" class="text-danger"></span></div>

                            @*SampleFields*@









                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
